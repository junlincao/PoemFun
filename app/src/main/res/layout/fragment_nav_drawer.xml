<com.cjl.poemfun.ui.widget.InsetsLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/def_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_container"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:background="@color/dark_gray"
        android:layout_height="180dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_image"
            android:layout_centerVertical="true"
            app:placeholderImage="@mipmap/ic_launcher"
            app:roundAsCircle="true"
            app:roundingBorderWidth="1px"
            app:roundingBorderColor="@android:color/white"
            android:scaleType="centerInside"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/name"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/no_login"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="@dimen/text_normal"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <com.cjl.poemfun.ui.widget.InnerListView
        android:id="@+id/function_list"
        android:choiceMode="singleChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:paddingTop="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color" />

    <com.cjl.poemfun.ui.widget.InnerListView
        android:id="@+id/setup_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</com.cjl.poemfun.ui.widget.InsetsLinearLayout>